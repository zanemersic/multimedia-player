<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BitmapImage x:Key="IconShuffle" UriSource="pack://application:,,,/Icons/shuffle.png"/>
    <BitmapImage x:Key="IconPrevious" UriSource="pack://application:,,,/Icons/previous.png"/>
    <BitmapImage x:Key="IconPlay" UriSource="pack://application:,,,/Icons/play.png"/>
    <BitmapImage x:Key="IconNext" UriSource="pack://application:,,,/Icons/next.png"/>
    <BitmapImage x:Key="IconRepeat" UriSource="pack://application:,,,/Icons/repeat.png"/>
    <BitmapImage x:Key="IconPause" UriSource="pack://application:,,,/Icons/stop.png"/>

    <Style TargetType="Button" x:Key="ControlButton">
        <Setter Property="Margin" Value="0,0,10,5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.75"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Trigger>

            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="PlayPauseButton" BasedOn="{StaticResource ControlButton}">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Content">
            <Setter.Value>
                <Image Source="{StaticResource IconPlay}"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>