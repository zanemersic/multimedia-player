<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListView" x:Key="Playlist">
        <Setter Property="Background" Value="#212121"/>
        <Setter Property="Foreground" Value="white"/>
        <Setter Property="MinWidth" Value="130"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="BorderBrush" Value="#BF00FF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="ItemsSource" Value="{Binding Playlist}"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.95"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="ListViewItem" x:Key="PlaylistItem">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                <Setter Property="Background" Value="#BF00FF"/>
                <Setter Property="Foreground" Value="Black"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>