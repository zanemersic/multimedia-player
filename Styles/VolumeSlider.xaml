<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="StackPanel" x:Key="VolumeSliderPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="10,0,20,10"/>
    </Style>

    <Style TargetType="Image" x:Key="VolumeIcon">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <Style TargetType="Slider" x:Key="VolumeSlider">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#BF00FF"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="TickFrequency" Value="10"/>
        <Setter Property="TickPlacement" Value="None"/>
    </Style>
</ResourceDictionary>