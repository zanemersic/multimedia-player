<Window x:Class="MultimedijskiPredvajalnik.MainWindow"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultimedijskiPredvajalnik"
        mc:Ignorable="d"
        Title="Multimedijski predvajalnik" Height="500" Width="900" MinHeight="500" MinWidth="900">

    <DockPanel>
        <Menu Style="{StaticResource Menu}">
            <MenuItem Header="_Datoteka">
                <MenuItem Header="_Izhod" 
                          Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Seznam">
                <MenuItem Header="Dodaj statično"/>
                <MenuItem Header="Uredi statično"/>
                <Separator/>
                <MenuItem Header="Dodaj"/>
                <MenuItem Header="Uredi"/>
                <MenuItem Header="Odstrani"/>
            </MenuItem>
        </Menu>

        <Grid Style="{StaticResource PurpleGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="75*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Style="{StaticResource MagentaGrid}"/>
                <Grid Grid.Column="2" Style="{StaticResource MagentaGrid}"/>

                <Grid Grid.Column="1" Style="{StaticResource MagentaGrid}">
                    <MediaElement x:Name="MediaPlayer" 
                                  Style="{StaticResource MediaPlayer}" 
                                  Source="{Binding CurrentMediaSource}" 
                                  MediaFailed="MediaPlayer_MediaFailed" 
                                  MediaEnded="MediaPlayer_MediaEnded"
                                  MediaOpened="MediaPlayer_MediaOpened">
                        
                    </MediaElement>
                </Grid>

                <Grid Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Viewbox Stretch="Uniform">
                        <TextBlock Text="PLAYLIST" Style="{StaticResource PinkText}"/>
                    </Viewbox>

                    <ListView Style="{StaticResource Playlist}" x:Name="PlaylistView" 
                              ItemsSource="{Binding Playlist}" 
                              SelectedItem="{Binding SelectedFile, Mode=TwoWay}" 
                              Grid.Row="1">
                        <ListView.InputBindings>
                            <MouseBinding MouseAction="LeftDoubleClick"
                                          Command="{Binding TogglePlayPauseCommand}"/>
                        </ListView.InputBindings>
                        
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource PlaylistItem}">
                                <EventSetter Event="MouseDoubleClick"
                                             Handler="ListViewItem_DoubleClick"/>
                                <EventSetter Event="MouseRightButtonUp"
                                             Handler="ListViewItem_RightClick"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="{Binding Cover}" Width="60" Height="60" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Author}" FontStyle="Italic"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </Grid>

            <Grid Grid.Row="2" Style="{StaticResource PurpleGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="80*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Viewbox Stretch="Uniform" MaxHeight="200" MaxWidth="600" Margin="0,10,50,10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="{Binding SelectedItem.Cover, ElementName=PlaylistView}" Style="{StaticResource Cover}"/>

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <TextBox Text="{Binding SelectedItem.Title, ElementName=PlaylistView}" Style="{StaticResource Title}"/>
                                <TextBox Text="{Binding SelectedItem.Author, ElementName=PlaylistView}" Style="{StaticResource Artist}"/>
                            </StackPanel>
                        </StackPanel>
                    </Viewbox>
                </Grid>

                <Grid Grid.Column="1">
                    <Viewbox Stretch="Uniform" StretchDirection="Both">
                        
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding CurrentTimeDisplay}" Style="{StaticResource TimeBegin}"/>
                                <Slider x:Name="Slider" 
                                        Style="{StaticResource ProgressSlider}"
                                        Thumb.DragStarted="ProgressSlider_DragStarted"
                                        Thumb.DragCompleted="ProgressSlider_DragCompleted"/>
                                <TextBlock Text="{Binding TotalTimeDisplay}" Style="{StaticResource TimeEnd}"/>
                            </StackPanel>
                            
                            <StackPanel Style="{StaticResource ControlPanel}">
                                <Button Style="{StaticResource ControlButton}">
                                    <Image Source="{StaticResource IconShuffle}"/>
                                </Button>

                                <Button Style="{StaticResource ControlButton}">
                                    <Image Source="{StaticResource IconPrevious}"/>
                                </Button>

                                <Button Style="{StaticResource PlayPauseButton}" 
                                        Command="{Binding TogglePlayPauseCommand}">
                                </Button>

                                <Button Style="{StaticResource ControlButton}">
                                    <Image Source="{StaticResource IconNext}"/>
                                </Button>

                                <Button Style="{StaticResource ControlButton}">
                                    <Image Source="{StaticResource IconRepeat}"/>
                                </Button>
                        </StackPanel>
                        </StackPanel>
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
