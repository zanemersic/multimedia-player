    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\icon.ico</ApplicationIcon>
    <RootNamespace>MultimedijskiPredvajalnik</RootNamespace>
    <AssemblyName>MultimedijskiPredvajalnik</AssemblyName>
