    <None Remove="Icons\previous.png" />
    <None Remove="Icons\repeat.png" />
    <None Remove="Icons\shuffle.png" />
    <None Remove="Icons\stop.png" />
    <None Remove="Resources\90210.mp4" />
    <None Remove="Resources\NoPole.mp4" />
