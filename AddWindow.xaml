<Window x:Class="MultimedijskiPredvajalnik.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultimedijskiPredvajalnik"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Multimedijski predvajalnik - Add" MinHeight="450" MinWidth="300" MaxHeight="450" MaxWidth="300" Background="#BF00FF">
    <Grid Margin="20" Style="{StaticResource MagentaGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Title :" Foreground="white" Margin="5,0,0,0"/>
            <TextBox x:Name="TitleBox" Background="#212121" Foreground="White" Margin="0,5,0,10"/>
            <TextBlock Text="Author :" Foreground="White" Margin="5,0,0,0"/>
            <TextBox x:Name="AuthorBox" Background="#212121" Foreground="White" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button Content="Select Video" Click="ChooseFile_Click" Width="120" Foreground="White" Background="#BF00FF"/>
            <TextBlock x:Name="FilePathText" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button Content="Confirm" Click="Confirm_Click" Width="100" Margin="0,0,10,0" Foreground="White" Background="#BF00FF"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Foreground="White" Background="#BF00FF"/>
        </StackPanel>
    </Grid>
</Window>
